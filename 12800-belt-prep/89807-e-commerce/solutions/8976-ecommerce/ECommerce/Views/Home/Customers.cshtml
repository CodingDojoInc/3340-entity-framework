@model Customer
<div class="addCustomers">
    <h3>Add a new Customer</h3>
    <form action="/customers/new" method="post">
        <label for="Name">Customer Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="submit" value="Add" class="btn btn-primary">
    </form>
</div>
<table class="table table-striped">
    <tr>
        <th>Customer Name</th>
        <th>Created On</th>
        <th>Actions</th>
    </tr>
    @foreach(Customer c in ViewBag.AllCustomers)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.CreatedAt.ToString("MMMM dd, yyyy")</td>
            <td><form action="/customers/delete/@c.CustomerId" method="post"><input type="submit" value="Remove" class="btn btn-danger"></form></td>
        </tr>
    }
</table>